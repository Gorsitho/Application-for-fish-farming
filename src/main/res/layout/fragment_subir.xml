<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.amanda.sergioapp.subir">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/foto"
                android:layout_width="266dp"
                android:layout_height="236dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.52"

                app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background"
                tools:layout_editor_absoluteY="-31dp" />


            <ImageView
                android:id="@+id/subir"
                android:layout_width="56dp"
                android:layout_height="66dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/subirfoto"
                 />

            <EditText
                android:id="@+id/editText13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_weight="0.52"
                android:ems="10"
                android:hint="Altura (Metros)"
                android:enabled="false"
                android:inputType="number" />

            <EditText
                android:id="@+id/editText12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_weight="0.52"
                android:ems="10"
                android:enabled="false"
                android:hint="Numero de identificacion"
                android:inputType="number" />

            <EditText
                android:id="@+id/editText9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_weight="0.52"
                android:ems="10"
                android:enabled="false"
                android:hint="Nombre"
                android:inputType="text" />

            <EditText
                android:id="@+id/editText14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_weight="0.52"
                android:ems="10"
                android:enabled="false"
                android:hint="Fecha de nacimiento"
                android:inputType="text" />

            <EditText
                android:id="@+id/editText10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_weight="0.52"
                android:ems="10"
                android:enabled="false"
                android:hint="Apellidos"
                android:inputType="text" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_weight="0.52"
                android:ems="10"
                android:enabled="false"
                android:hint="Cargo"
                android:inputType="text" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>






